<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="col col-md-10 mx-auto">
    <div class="row">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i> 類別:</span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i> 地址:</span>
        <a href="{{restaurant.google_map}}", target="_blank">
          {{restaurant.location}}
        </a>
      </p>
      <p class="mb-3">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i> 電話:</span>
        {{restaurant.phone}}
      </p>
      
      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img src="https://raw.githubusercontent.com/cyanshub/PROJECT-EATINGLIST_EXPRESS/main/{{restaurant.image}}" alt="{{restaurant.name}}" class="rounded mb-4 w-100 d-block mx-auto">

      
    </div>
  </div>
</div>